<% @product.reviews.each do |review| %>
  <% if review.id.present? %>
    <div class="review">
      <p>
        <%= review.comment %>
        <br>
        <% if review.user != nil %>
          <em> by <%= review.user.name %></em>
          Added on: <%= review.created_at %>
        <% end %>
      </p>
    </div>
  <% end %>
<% end %>